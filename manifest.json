{   "manifest_version": 2,

    "name": "InfiniPassword",
    "description": "This extension is a free password manager.",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["contentScript.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "pages/login.html"
    },
    
    "permissions": [
        "activeTab",
        "clipboard-write"
    ]
}